<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"> <!-- Asegúrate de que el LinearLayout esté en orientación vertical -->

    <TextView
        android:id="@+id/animal_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" /> <!-- Margen inferior de 16dp -->

    <TextView
        android:id="@+id/animal_specie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" /> <!-- Margen inferior de 16dp -->

    <TextView
        android:id="@+id/animal_ability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>